{# Basic HTML5 template #}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{{ title | default('Site Title') }}{% endblock title %}</title>


    {% if meta_description is defined and meta_description is not empty %}
        <meta name="description" content="{{ meta_description }}">
    {% endif %}
    {% if meta_author is defined and meta_author is not empty %}
        <meta name="author" content="{{ meta_author }}">
    {% endif %}

    {# Additional meta tags go here #}
    {% block metaTags %}{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link href="{{ asset('bundles/zantolovapp/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/zantolovapp/css/centered-columns.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/zantolovapp/css/style.css') }}" rel="stylesheet">
    {% endblock %}

    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

{% block body %}{% endblock body %}

{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="{{ asset('bundles/zantolovapp/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/zantolovapp/js/main.js') }}"></script>
{% endblock %}
</body>
</html>